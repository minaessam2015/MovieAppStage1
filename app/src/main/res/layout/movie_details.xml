<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/movie_image_onDetails"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/mimo_pic" />

            <TextView
                android:id="@+id/title_text_onDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/movie_image_onDetails"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating_text_onDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title_text_onDetails"
                android:layout_alignStart="@+id/title_text_onDetails"
                android:layout_below="@+id/title_text_onDetails"
                android:layout_marginTop="38dp"
                android:text="10"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_text_onDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rating_text_onDetails"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/rating_text_onDetails"
                android:layout_marginBottom="18dp"
                android:text="date"
                android:textSize="18sp" />


        </RelativeLayout>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="overview"
            android:textSize="18sp"
            android:id="@+id/overview_text_onDetails"
            />
    </LinearLayout>
</ScrollView>